<!DOCTYPE html>
<html lang="th">
<head>
  <meta charset="UTF-8" />
  <title>My Gallery</title>
  <style>
    .grid { display: grid; grid-template-columns: repeat(auto-fill, minmax(180px,1fr)); gap: 12px; }
    .card { border: 1px solid #ddd; padding: 8px; border-radius: 8px; background: #fafafa; }
    img { width: 100%; height: 160px; object-fit: cover; border-radius: 6px; }
    .meta { font-size: 12px; color: #555; margin-top: 6px; }
  </style>
</head>
<body>

  <h2>My Gallery</h2>
<div class="gallery">
  <% images.forEach(img => { %>
    <div class="card">
      <img src="<%= img.url %>" alt="<%= img.originalName %>" alt="<%= img.storedName %>"" >
      
      <!-- à¸Šà¸·à¹ˆà¸­à¹„à¸Ÿà¸¥à¹Œ -->
      <p><strong><%= img.originalName %></strong></p>

      <!-- âœ… à¹à¸ªà¸”à¸‡ Description à¸–à¹‰à¸²à¸¡à¸µ -->
      <% if (img.description && img.description.trim() !== '') { %>
        <p><em><%= img.description %></em></p>
      <% } else { %>
        <p style="color: #999;">No description yet.</p>
      <% } %>

      <!-- à¸ªà¸–à¸²à¸™à¸° -->
      <p>Status: <%= img.isPublic ? 'ðŸŒ Public' : 'ðŸ”’ Private' %></p>

      <button onclick="toggle('<%= img._id %>')">
        Change to <%= img.isPublic ? 'Private' : 'Public' %>
      </button>
    </div>
  <% }) %>
</div>



<script>
async function toggle(id) {
  const res = await fetch(`/api/gallery/toggle/${id}`, {
    method: 'PUT'
  });
  const data = await res.json();
  if (data.ok) location.reload();
  else alert(data.message);
}
</script>
</body>
</html>
