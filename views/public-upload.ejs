<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Public Gallery | Mind Gallery</title>
  <link rel="stylesheet" href="/gallery.css">
</head>
<body>
  <h1>üåê Public Gallery</h1>
  <div class="gallery">
    <% if (images.length === 0) { %>
      <p>No public images yet.</p>
    <% } %>

    <% images.forEach(img => { %>
      <div class="card">
        <img src="/<%= img.path.replace(/\\/g, '/') %>" width="200" height="200" />
        <p><%= img.originalName %></p>
        <small>By: <%= img.userId?.name || 'Unknown' %></small>
      </div>
    <% }) %>
  </div>

  <style>
    body {
      font-family: sans-serif;
      background: #fafafa;
      text-align: center;
    }
    .gallery {
      display: flex;
      flex-wrap: wrap;
      gap: 1rem;
      justify-content: center;
    }
    .card {
      background: white;
      border-radius: 12px;
      box-shadow: 0 2px 5px rgba(0,0,0,0.1);
      padding: 10px;
      transition: transform 0.2s;
    }
    .card:hover {
      transform: scale(1.05);
    }
    img {
      border-radius: 8px;
      object-fit: cover;
    }
  </style>
</body>
</html>
